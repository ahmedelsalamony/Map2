
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context="com.example.ahmed.custom_navigation_drawer.MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:popupTheme="@style/AppTheme.PopupOverlay" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:background="@drawable/logo"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#fff"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:id="@+id/toolbar_title" />


                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>






























        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.example.elnemr.aqaralatheer.Picker.SearchResult">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textadvert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"

                    android:gravity="center_vertical|center_horizontal"
                    android:text="الاعلانات المنشورة"
                    android:textColor="@color/MainColor"
                    android:textSize="25dp" />


                <ListView
                    android:id="@+id/alladvert"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="58dp"></ListView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="104dp"
                    android:text="لا يوجد نتائج ابحث بطريقة اخرى"
                    android:id="@+id/notfound"
                    android:visibility="gone"
                    android:textColor="@color/MainColor"
                    android:gravity="center_vertical|center|center_horizontal" />
            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/sss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:src="@drawable/search"
                app:backgroundTint="#EBA921"
                android:layout_above="@+id/homeTabWidget"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="7dp"
               android:layout_alignParentRight="true"
                />


            <TabWidget

                android:id="@+id/homeTabWidget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="0dp"


                android:background="@color/MainColor"
                android:dividerPadding="4dp"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/call"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/phone"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="اتصل بنا"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/home"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/home"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="الرئيسيه"
                    android:textColor="#fff"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/advertd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:drawableTop="@drawable/way"
                    android:gravity="center_vertical|center_horizontal"
                    android:padding="5dp"
                    android:text="أضف اعلان"
                    android:textColor="#fff"
                    android:textStyle="bold" />
            </TabWidget>

        </RelativeLayout>


</LinearLayout>












    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.NavigationView

        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_mapsactivity"
        app:menu="@menu/main"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/main"
                android:layout_weight="1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/homemain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="الرئيسية"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></LinearLayout>

            <TextView
                android:id="@+id/main1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/addmain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="اضف حساب"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></LinearLayout>

            <TextView
                android:id="@+id/main2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/searchmain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="بحث"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></LinearLayout>
            <TextView
                android:id="@+id/main3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/profilemain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="حسابى"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/main3line"
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></LinearLayout>

            <TextView
                android:id="@+id/main4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/markermain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="اضف اعلان"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"></LinearLayout>
            <TextView
                android:id="@+id/main5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:textSize="18dp"
                android:drawableRight="@drawable/logoutmain"
                android:drawablePadding="10dp"
                android:foregroundGravity="left|fill_vertical"

                android:text="تسجيل خروج"
                android:textColor="@color/MainColor"
                android:layout_marginRight="10dp"
                />
            <LinearLayout
                android:id="@+id/main5line"
                android:layout_width="match_parent"
                android:background="@color/MainColor"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:text="البرنامج الاول فى تسويق العقارات و الاراضى"
                android:textColor="#EBA921" />

            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/com1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|bottom"
                android:text="شركة الاثير"
                android:textColor="#3B5998"

                />
        </LinearLayout>

    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>
